generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProductCategoey {
  MOBILE
  LAPTOP
  WATCH
  OTHERS
}

model Product {
  id          String          @id @default(uuid())
  name        String
  category    ProductCategoey
  description String?
  price       Float?          @default(0.0)
  quantity    Int?            @default(0)
  image       Image[]
  cart        CartItem[]
}

model Image {
  id        String   @id @default(uuid())
  image     String
  Product   Product? @relation(fields: [productId], references: [id])
  productId String?
}

model CartItem {
  id        Int     @id @default(autoincrement())
  userId    String
  productId String
  quantity  Int
  product   Product @relation(fields: [productId], references: [id])
}
